<p id="notice"><%= notice %></p>

<h1>Mangakas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mangakas.each do |mangaka| %>
      <tr>
        <td><%= mangaka.name %></td>
        <td><%= mangaka.image %></td>
        <td><%= link_to 'Show', mangaka %></td>
        <td><%= link_to 'Edit', edit_mangaka_path(mangaka) %></td>
        <td><%= link_to 'Destroy', mangaka, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mangaka', new_mangaka_path %>
